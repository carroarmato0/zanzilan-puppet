# Set listening interface, dhcp range and lease time
dhcp-range=<%= scope.lookupvar('interface') %>,<%= scope.lookupvar('dhcp_range') %>,<%= scope.lookupvar('dhcp_lease') %>

# Pass default gateway
dhcp-option=<%= scope.lookupvar('interface') %>,3,<%= scope.lookupvar('gw_ipaddress') %>

# Pass DNS server
dhcp-option=<%= scope.lookupvar('interface') %>,6,<%= scope.lookupvar('dns_servers').join(',') %>

# Pass search domain
dhcp-option=<%= scope.lookupvar('interface') %>,119,<%= scope.lookupvar('domain') %>

# Pass NTP server
dhcp-option=<%= scope.lookupvar('interface') %>,42,<%= scope.lookupvar('ntp_servers').join(',') %>
